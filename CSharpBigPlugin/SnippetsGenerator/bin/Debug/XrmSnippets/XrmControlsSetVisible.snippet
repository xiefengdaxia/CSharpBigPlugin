<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>XrmControlsSetVisible</Title>
      <Shortcut>XrmControlsSetVisible</Shortcut>
      <Description> 5.0+ Sets a value that indicates whether the control is visible. 
Xrm.Page.getControl("controlname").setVisible(true|false);</Description>
      <Author>cangfeng</Author>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="false"></Literal>
      </Declarations>
      <Code Language="javascript"><![CDATA[ Xrm.Page.getControl("controlname").setVisible(true|false); $end$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
